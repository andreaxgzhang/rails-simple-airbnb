<div class="map" style="background-image: url(<%= @image[@flat.id - 1] %>)">  </div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="show-card">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address  %></p>
      </div>
      <div class="show-card">
        <h3>A bit more about this flat</h3>
        <p><%= @flat.description %></p>
        <div>
          <%= image_tag @url%>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="show-card">
        <strong><h5>Book this place!</h5></strong>
        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success" style="width: 100%">
        </form>
      </div>
      <div class="show-card">
        <h3>Details</h3>
        <i class="fas fa-user-plus">      <%= @flat.number_of_guests %></i>
        <i class="fas fa-dollar-sign">   <%= @flat.price_per_night %></i>
      </div>
      <div class="show-card">
        <div class="row-for-share">
          <h6>Share</h6>
          <div class="flex">
            <i class="fab fa-facebook"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-pinterest-square"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

